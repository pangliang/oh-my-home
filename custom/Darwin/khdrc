# reload config
cmd + alt - r : khd -e "reload"

# focus window
alt - j : chunkc tiling::window --focus west
alt - k : chunkc tiling::window --focus south
alt - i : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east
alt - tab : chunkc tiling::window --focus next

# equalize size of windows
shift + alt - 0 : chunkc tiling::desktop --equalize

# move floating windows / windows on a floating space
alt - w : chunkc tiling::window --grid-layout 1:1:0:0:1:1
alt - a : chunkc tiling::window --grid-layout 1:2:0:0:1:1
alt - d : chunkc tiling::window --grid-layout 1:2:1:0:1:1
alt - s : chunkc tiling::window --grid-layout 10:10:1:0:8:10

alt - q : chunkc tiling::window --grid-layout 2:2:0:0:1:1
alt - e : chunkc tiling::window --grid-layout 2:2:1:0:1:1
alt - z : chunkc tiling::window --grid-layout 2:2:0:1:1:1
alt - c : chunkc tiling::window --grid-layout 2:2:1:1:1:1

# increase region size
shift + alt - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + alt - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + alt - d : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west

# decrease region size
shift + alt - j : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east
shift + alt - k : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
shift + alt - i : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + alt - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# focus monitor 
alt - 1  : chunkc tiling::monitor -f 1
alt - 2  : chunkc tiling::monitor -f 2

# send window to monitor and follow focus
alt - p : `id=$(chunkc tiling::query --monitor id); tid=$(( $id^3  )); chunkc tiling::window --send-to-monitor $tid; chunkc tiling::monitor -f $tid &>/dev/null`

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
shift + alt - f : chunkc tiling::window --toggle native-fullscreen

# toggle window parent zoom
alt - d : chunkc tiling::window --toggle parent

# float / unfloat window
alt - t : chunkc tiling::window --toggle float

# change layout of desktop
ctrl + alt - a : chunkc tiling::desktop --layout bsp
ctrl + alt - s : chunkc tiling::desktop --layout monocle
ctrl + alt - d : chunkc tiling::desktop --layout float


